<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Language" content="fa" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link href="~/Content/kendo.common.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.default.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/kendo.all.min.js" type="text/javascript"></script>

    <script src="~/Scripts/cultures/kendo.culture.fa-IR.js" type="text/javascript"></script>
    <script src="~/Scripts/cultures/kendo.culture.fa.js" type="text/javascript"></script>
    <script src="~/Scripts/messages/kendo.messages.en-US.js" type="text/javascript"></script>

    <!--https://github.com/moment/moment/-->
    <script src="~/Scripts/cultures/moment.min.js" type="text/javascript"></script>
    <!--https://github.com/jalaali/moment-jalaali-->
    <script src="~/Scripts/cultures/moment-jalaali.js" type="text/javascript"></script>

    <!--https://github.com/loudenvier/kendo-global/blob/master/lang/kendo.fa-IR.js-->
    <script src="~/Scripts/messages/kendo.fa-IR.js" type="text/javascript"></script>

    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

    <script src="~/Scripts/kendo.aspnetmvc.js" type="text/javascript"></script>
    @*<script src="~/Scripts/moon.kendo.validation-3.0.8.js" type="text/javascript"></script>*@

    <style type="text/css">
        body {
            font-family: tahoma;
            font-size: 9pt;
        }
    </style>

    <script type="text/javascript">
        kendo.culture("fa-IR");
    </script>
</head>
<body>
    @RenderBody()
    @RenderSection("JavaScript", required: false)
</body>
</html>